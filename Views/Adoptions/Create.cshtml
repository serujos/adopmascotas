@model Adoption
@{
    ViewBag.Title = "Asignar Adopción";
    var pets = ViewBag.Pets as List<Pet>;
    var adopters = ViewBag.Adopters as List<Adopter>;
}

<h2>Asignar Mascota a Adoptante</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Mascota</label>
        <select name="PetId" class="form-control" required>
            @foreach (var pet in pets)
            {
                <option value="@pet.Id">@pet.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Adoptante</label>
        <select name="AdopterId" class="form-control" required>
            @foreach (var adopter in adopters)
            {
                <option value="@adopter.Id">@adopter.FullName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Asignar Adopción</button>
</form>
